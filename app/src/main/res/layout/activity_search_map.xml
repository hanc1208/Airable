<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/search_map_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="75dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_map_search_image"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/timer_3"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_map_timer"
                    android:id="@+id/search_map_timer_textview"
                    android:textColor="#40c4ff"
                    android:layout_gravity="center_vertical|right"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/search_map_search_image"
                    android:layout_toEndOf="@+id/search_map_search_image"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_2"
                android:background="#00000000"
                android:id="@+id/search_map_search_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/map_search_info_linear">
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:id="@+id/search_map_map"/>
            <ImageButton
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id="@+id/search_map_current_point_button"
                android:src="@drawable/position"
                android:background="#00000000"
                android:layout_below="@+id/search_map_floor_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="14dp" />

            <Button
                android:layout_width="54.5dp"
                android:layout_height="30dp"
                android:id="@+id/search_map_floor_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:text="3ì¸µ"
                android:background="@drawable/map_btn_bg"
                style="?android:attr/borderlessButtonStyle" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="#c2c2c2"
            android:layout_above="@+id/map_search_info_linear"/>
        <RelativeLayout
            android:id="@+id/map_search_info_linear"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_map_curshop_title"
                android:id="@+id/search_map_curshop_title_textview"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:textSize="17.5sp"
                android:textStyle="bold"
                android:textColor="#263238" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_map_curshop_time"
                android:id="@+id/search_map_curshop_time_textview"
                android:layout_below="@+id/search_map_curshop_title_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:textColor="#263238"
                android:textSize="12.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_map_curshop_location"
                android:id="@+id/search_map_curshop_location_textview"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/search_map_curshop_time_textview"
                android:layout_alignStart="@+id/search_map_curshop_time_textview"
                android:layout_marginBottom="20dp"
                android:textColor="#03a9f4"
                android:textSize="15dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_map_curshop_call"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:src="@drawable/call" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_map_curshop_mark"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/search_map_curshop_call"
                android:layout_toStartOf="@+id/search_map_curshop_call"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:src="@drawable/mark" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>