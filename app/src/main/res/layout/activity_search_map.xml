<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/search_map_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="75dp">

                    <ImageView
                        android:id="@+id/search_map_search_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/timer_3" />

                    <TextView
                        android:id="@+id/search_map_timer_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|right"
                        android:layout_toEndOf="@+id/search_map_search_image"
                        android:layout_toRightOf="@+id/search_map_search_image"
                        android:text="@string/search_map_timer"
                        android:textColor="#40c4ff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/search_map_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#00000000"
                    android:src="@drawable/search_2" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/search_map_info_linear">

                <View
                    android:id="@+id/search_map_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE" />

                <ImageButton
                    android:id="@+id/search_map_current_point_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/search_map_floor_button"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:src="@drawable/position" />

                <Button
                    android:id="@+id/search_map_floor_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="54.5dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/map_btn_bg"
                    android:text="3ì¸µ" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_above="@+id/search_map_info_linear"
                android:background="#c2c2c2" />

            <RelativeLayout
                android:id="@+id/search_map_info_linear"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/search_map_curshop_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="11dp"
                    android:text="@string/search_map_curshop_title"
                    android:textColor="#263238"
                    android:textSize="17.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_map_curshop_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/search_map_curshop_title_textview"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="11dp"
                    android:text="@string/search_map_curshop_time"
                    android:textColor="#263238"
                    android:textSize="12.5sp" />

                <TextView
                    android:id="@+id/search_map_curshop_location_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/search_map_curshop_time_textview"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/search_map_curshop_time_textview"
                    android:layout_marginBottom="20dp"
                    android:text="@string/search_map_curshop_location"
                    android:textColor="#03a9f4"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/search_map_curshop_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:src="@drawable/call" />

                <ImageButton
                    android:id="@+id/search_map_curshop_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/search_map_curshop_call"
                    android:layout_toStartOf="@+id/search_map_curshop_call"
                    android:background="#00000000"
                    android:src="@drawable/mark" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_map_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</merge>